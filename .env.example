# =================================
# RENT-A-CAR MICROSERVICES CONFIG
# =================================

# Application Environment
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# =================================
# DATABASE CONFIGURATION
# =================================

# MongoDB
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_password_here
MONGO_DB_NAME=rentacar

# PostgreSQL (Optional - for analytics)
POSTGRES_DB=rentacar_analytics
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here

# Redis
REDIS_PASSWORD=your_redis_password_here

# =================================
# MESSAGE QUEUE (RabbitMQ)
# =================================
RABBITMQ_DEFAULT_USER=rentacar
RABBITMQ_DEFAULT_PASS=your_rabbitmq_password_here

# =================================
# JWT CONFIGURATION
# =================================
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long_here
JWT_EXPIRE=7d

# =================================
# CLOUDINARY (File Upload)
# =================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# =================================
# PAYMENT GATEWAYS
# =================================

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Iyzico (Turkish Payment Gateway)
IYZICO_API_KEY=your_iyzico_api_key
IYZICO_SECRET_KEY=your_iyzico_secret_key
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com

# Bank Integrations (Optional)
GARANTI_TERMINAL_ID=your_garanti_terminal_id
GARANTI_MERCHANT_ID=your_garanti_merchant_id
GARANTI_PROVISION_PASSWORD=your_garanti_provision_password

# =================================
# EMAIL CONFIGURATION
# =================================
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_app_password
EMAIL_FROM="Rent-a-Car System <noreply@rentacar.com>"

# =================================
# SMS CONFIGURATION
# =================================

# Twilio (International)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# NetGSM (Turkish SMS Provider)
NETGSM_USERNAME=your_netgsm_username
NETGSM_PASSWORD=your_netgsm_password
NETGSM_HEADER=your_netgsm_header

# =================================
# PUSH NOTIFICATIONS
# =================================

# Firebase Cloud Messaging
FCM_SERVER_KEY=your_fcm_server_key

# Apple Push Notification Service
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apns_team_id
APNS_PRIVATE_KEY=your_apns_private_key

# =================================
# EXTERNAL API KEYS (Optional)
# =================================

# Google Maps (for location services)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Weather API (for travel conditions)
OPENWEATHER_API_KEY=your_openweather_api_key

# =================================
# MONITORING & LOGGING (Optional)
# =================================

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn

# DataDog (Monitoring)
DATADOG_API_KEY=your_datadog_api_key

# =================================
# DEVELOPMENT SETTINGS
# =================================

# Debug Mode
DEBUG=true

# Seed Database with Sample Data
SEED_DATABASE=true

# Enable API Documentation
ENABLE_DOCS=true